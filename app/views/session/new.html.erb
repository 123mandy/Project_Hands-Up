<div class="form_div">
  <div class ="form_content_div">
    <%=form_tag login_path %>
    <%= label_tag :email, nil, :class => "form-label"%>
    <%= email_field_tag :email, nil, :class => "form-control" %>

    <%= label_tag :password, nil, :class => "form-label"%>
    <%= password_field_tag :password, nil, :class => "form-control" %>
    

    <%= submit_tag "Log In", :class => "link_button no_margin" %>
    
  </div>
</div>