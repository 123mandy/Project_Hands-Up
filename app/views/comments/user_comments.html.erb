<% @comments.reverse.each do |comment| %>
<% if comment.post != nil %>
 <div class="content_main">
   <div class="row">
     
       <div class="col-8 col-md-8">
           <p><%= comment.comment %></p>
       </div>
       <div class="col-4 col-md-4 control">
           <%= link_to "Edit Comment", edit_comment_path(comment.id) %>
           <%= link_to "Delete Comment",comment,:method => "delete" %>
       </div>
     </div>
   </div>
   <% end %>
<% end %>