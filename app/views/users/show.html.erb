<div class="content_main">
  <div class="row">
     <div class="col-6 col-md-6"> 
      <% if @current_user == @user %>
       <h2>Welcome! <%= @user.user_name %> ðŸ”† </h2>
        <% if @user.image.present?  %>
        <%= cl_image_tag @user.image, :class => "profile-img" %>
        <% else %>
        <img src="https://farmersca.com/wp-content/uploads/2016/07/default-profile.png" alt="" class="profile-img">
        <% end %>
       <%= form_for(@user, :html => {:multipart => true}) do |f| %>
       <%= f.label "New user Name:" %>
       <%= f.text_field :user_name %>

       <%=f.label "Profile photo" %>
       <%= f.cl_image_upload :image %>

       <%= f.label "Change your password:" %>
       <%= f.text_field :password %>

       <%= f.label "Confirm your password:" %>
       <%= f.text_field :password_confirmation %>


       <%= f.submit "Update Profile" %>
       <% end %>
      <% else %>
       <h4>User Name: <%= @user.user_name %></h4>
       <h4>Total Posts: <%= @user.posts.count %></h4>
      <% end %>
     </div>
     <div class="col-6 col-md-6">
       <% @posts.reverse.each do |post|%>
           <div class="single_post">
               <h3><%= link_to post.title, post_path(post.id) %></h3>
               <p><%=  post.content %></p>
          </div>
      <% end %>
    </div>
  </div>
</div>