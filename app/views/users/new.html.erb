
<div class="form_div">
  <div class ="form_content_div">
      <%= form_for @user do |f| %>
        <%= f.label :user_name, :class => "form-label" %>
        <%= f.text_field :user_name, :class => "input_center form-control" %>
        <%= f.label :email, :class => "form-label" %>
        <%= f.text_field :email, :class => "input_center form-control" %>
        <%= f.label :password, :class => "form-label" %>
        <%= f.password_field :password, :class => "input_center form-control" %>

        <%= f.label :password_confirmation, :class => "form-label" %>
        <%= f.password_field :password_confirmation, :class => "input_center form-control" %>


        <%= f.submit "Sign up!", :class => "link_button no_margin" %>
      <% end %>
  </div>
</div>
    

