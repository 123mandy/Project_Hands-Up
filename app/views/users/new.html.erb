
<div class="form_div">
  <div class ="form_content_div">
      <%= form_for @user do |f| %>
        <%= f.label :user_name %>
        <%= f.text_field :user_name, :class => "input_center" %>
        <%= f.label :email %>
        <%= f.text_field :email, :class => "input_center" %>
        <%= f.label :password %>
        <%= f.password_field :password, :class => "input_center" %>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, :class => "input_center" %>

        <%= f.submit "Sign up!", :class => "link_button no_margin" %>
      <% end %>
  </div>
</div>
    

