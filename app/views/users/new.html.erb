<div class="container-eyes">
    <div class="eyeBall">
      <div class="iris"></div>
    </div>
    <div class="eyeLid"></div>
    <div class="lid"></div>
</div>


<div class="form_div">
  <div class ="form_content_div">
      <% if @user.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
      </div>
      <% end %>
      <%= form_for @user do |f| %>
        <%= f.label :user_name, :class => "form-label" %>
        <%= f.text_field :user_name, :class => "input_center form-control" %>
        <%= f.label :email, :class => "form-label" %>
        <%= f.text_field :email, :class => "input_center form-control" %>
        <%= f.label :password, :class => "form-label" %>
        <%= f.password_field :password, :class => "input_center form-control" %>

        <%= f.label :password_confirmation, :class => "form-label" %>
        <%= f.password_field :password_confirmation, :class => "input_center form-control" %>
        <%= f.hidden_field :image, :value => "/assets/user.jpg"%>



        <%= f.submit "Sign up!", :class => "link_button" %>
      <% end %>
  </div>
</div>


<script>
  const eye = document.querySelector('.iris');
  window.addEventListener('mousemove', (event) => {
    const x = -(window.innerWidth / 2 - event.pageX) / 35;
    const y = -(window.innerHeight / 2 - event.pageY) / 35;
    eye.style.transform = `rotate(-45deg) translateY(${y}px) translateX(${x}px)`;         
    }); 

</script>
    

