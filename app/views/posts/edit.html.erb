<div class="container-eyes">
    <div class="eyeBall">
      <div class="iris"></div>
    </div>
    <div class="eyeLid"></div>
    <div class="lid"></div>
</div>

<div class ="post_content_div">
  <div class="center_div">
     <%= form_for(@post,:html => {:multipart => true}) do |f| %>
       <%= f.label :title, :class => "form-label" %>
       <%= f.text_field :title, :required => true, :class => "form-control" %>
       <%= f.label "Status", :class => "form-label" %>
       <%= f.select :status_id, Status.pluck(:completion, :id), :class => "form-select"%>
       <%= f.label "Area", :class => "form-label" %>
       <%= f.select :location_id, Location.pluck(:name, :id), :class => "form-select"%>
     
       <%= f.label :address, :class => "form-label" %>
       <%= f.text_field :address, :required => true, :class => "form-control" %>
     
       <%= f.label :price, :class => "form-label" %>
       <%= f.text_field :price, :required => true, :class => "form-control" %>

       <%= f.label :content, :class => "form-label"%>
       <%= f.text_area :content, :rows => "5", :required => true, :class => "form-control" %>
       <%= f.hidden_field :user_id, :value => @current_user.id %>

       <%= f.label :image, :class => "form-label" %>
       <%= f.cl_image_upload :image %>
     
       <%= f.submit "Update Help", :class => "link_button submit-buttom"  %>
     <% end %>
  </div>
</div>

<script>
  const eye = document.querySelector('.iris');
  window.addEventListener('mousemove', (event) => {
    const x = -(window.innerWidth / 2 - event.pageX) / 35;
    const y = -(window.innerHeight / 2 - event.pageY) / 35;
    eye.style.transform = `rotate(-45deg) translateY(${y}px) translateX(${x}px)`;         
    }); 

</script>
  
   
