<div class="row content_main">
   <div class="col-4 col-md-4 scroll-div" >
      <div class="row">
      <% @posts.each do |post| %>
       <p hidden id="lat"> <%= post.latitude %></p>
       <p hidden id="lng"> <%= post.longitude %></p>
       <p hidden id="title"> <%= post.title %></p>

   
       <div class="card" style="width: 95%;">
         <div class="card-body">
           <h5 class="card-title"><%= post.title %></h5>
         </div>
           <ul class="list-group">
           <li class="list-group-item">
              <img src="/assets/location.png" alt="" class="icon"><%= post.address %>
           </li>
           <li class="list-group-item">
              <img src="/assets/dollor.png" alt="" class="icon"><%= post.price %>
           </li>
         
         </ul>
         <div class="card-body">
           <%= link_to "Find details", post , :class =>"btn btn-primary link-for-map" %>
         </div>
         <% if post.user.image.present? %>
         <%= cl_image_tag post.user.image, :class => "profile-img-post" %>
         <% else %>
         <img src="/assets/user.jpg" alt="" class="profile-img-post">
         <% end %>
       </div>
      <% end %>
     </div>
   </div>

   


   <div class="col-8 col-md-8 " >
   <div id="map" style="width: 100%; height: 80vh;"></div>
      <script type="text/javascript">
        let lats = document.querySelectorAll("#lat");
        let lngs = document.querySelectorAll("#lng");
        let titles = document.querySelectorAll("#title");

        let locations = [];
        let markerLists =[];
        for(let i=0; i< lats.length; i++){
          const location = [titles[i].innerText, parseFloat(lats[i].innerText), parseFloat(lngs[i].innerText), i]
          const markerList = {
               latList: lats[i].innerText,
               lngList: lngs[i].innerText
            }
          locations.push(location)
          makerLists.push(makerList)
        };



         //var locations = [
         //  ['Bondi Beach', -33.890542, 151.274856, 4],
         //  ['Coogee Beach', -33.923036, 151.259052, 5],
         //  ['Cronulla Beach', -34.028249, 151.157507, 3],
         //  ['Manly Beach', -33.80010128657071, 151.28747820854187, 2],
         //  ['Maroubra Beach', -33.950198, 151.259302, 1]
         // ];
        
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 10,
          center: new google.maps.LatLng(-33.92, 151.25),
          mapTypeId: google.maps.MapTypeId.ROADMAP
        });
        
        var infowindow = new google.maps.InfoWindow();
    
        var marker, i;
        
        for (i = 0; i < locations.length; i++) {  
          marker = new google.maps.Marker({
            position: new google.maps.LatLng(locations[i][1], locations[i][2]),
            map: map
          });
          
          google.maps.event.addListener(marker, 'click', (function(marker, i) {
            return function() {
              infowindow.setContent(locations[i][0]);
              infowindow.open(map, marker);
            }
          })(marker, i));
        }
      </script>

   </div>
</div>